<ModOps>
  <!-- Description -->
  <ImyaTweaks Title="Change the Range of all OW 2x1 Markets." Description="You can Increase or Decrease the Ranges of all OW 2x1 Markets on Land and Water" />
  
  <!-- Change FullSatisfactionDistance of 2x1 Markets OW-->
  <ModOp Type="replace" GUID="1337502965,1337502966,1337502967,1337502968,1337504077,1337504078,1337504079,1337504080" Path="/Values/PublicService/FullSatisfactionDistance" ModOpID="FullSatisfactionDistance2x1AllMarketsOWMU">
    <FullSatisfactionDistance>20</FullSatisfactionDistance>
  </ModOp>
  <ImyaExpose Path="self::FullSatisfactionDistance" ModOpID="FullSatisfactionDistance2x1AllMarketsOWMU" ExposeID="Custom FullSatisfactionDistance for 2x1 Markets OW" Description="Sets the FullSatisfactionDistance for the 2x1 Markets in the OW ( Mod default settings = 20 )" Kind="Slider">
    <SliderDefinition Min="0" Max="50" Stepping="1" />
  </ImyaExpose>
  
  <!-- Change NoSatisfactionDistance of 2x1 Markets OW-->
  <ModOp Type="replace" GUID="1337502965,1337502966,1337502967,1337502968,1337504077,1337504078,1337504079,1337504080" Path="/Values/PublicService/NoSatisfactionDistance" ModOpID="NoSatisfactionDistance2x1AllMarketsOWMU">
    <NoSatisfactionDistance>45</NoSatisfactionDistance>
  </ModOp>
  <ImyaExpose Path="self::NoSatisfactionDistance" ModOpID="NoSatisfactionDistance2x1AllMarketsOWMU" ExposeID="Custom NoSatisfactionDistance for 2x1 Markets OW" Description="Sets the NoSatisfactionDistance for the 2x1 Markets in the OW ( Mod default settings = 45 )" Kind="Slider">
    <SliderDefinition Min="0" Max="100" Stepping="1" />
  </ImyaExpose>
</ModOps>