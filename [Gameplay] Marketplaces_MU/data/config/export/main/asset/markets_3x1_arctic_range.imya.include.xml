<ModOps>
  <!-- Description -->
  <ImyaTweaks Title="Change the Range of all ARCTIC 3x1 Markets." Description="You can Increase or Decrease the Ranges of all ARCTIC 3x1 Markets on Land" />
  
  <!-- Change FullSatisfactionDistance of 3x1 Markets ARCTIC-->
  <ModOp Type="replace" GUID="1337502990" Path="/Values/PublicService/FullSatisfactionDistance" ModOpID="FullSatisfactionDistance3x1AllMarketsARCTICMU">
    <FullSatisfactionDistance>17</FullSatisfactionDistance>
  </ModOp>
  <ImyaExpose Path="self::FullSatisfactionDistance" ModOpID="FullSatisfactionDistance3x1AllMarketsARCTICMU" ExposeID="Custom FullSatisfactionDistance for 3x1 Markets ARCTIC" Description="Sets the FullSatisfactionDistance for the 3x1 Markets in the ARCTIC ( Mod default settings = 17 )" Kind="Slider">
    <SliderDefinition Min="0" Max="50" Stepping="1" />
  </ImyaExpose>
  
  <!-- Change NoSatisfactionDistance of 3x1 Markets ARCTIC-->
  <ModOp Type="replace" GUID="1337502990" Path="/Values/PublicService/NoSatisfactionDistance" ModOpID="NoSatisfactionDistance3x1AllMarketsARCTICMU">
    <NoSatisfactionDistance>34</NoSatisfactionDistance>
  </ModOp>
  <ImyaExpose Path="self::NoSatisfactionDistance" ModOpID="NoSatisfactionDistance3x1AllMarketsARCTICMU" ExposeID="Custom NoSatisfactionDistance for 3x1 Markets ARCTIC" Description="Sets the NoSatisfactionDistance for the 3x1 Markets in the ARCTIC ( Mod default settings = 34 )" Kind="Slider">
    <SliderDefinition Min="0" Max="100" Stepping="1" />
  </ImyaExpose>
</ModOps>